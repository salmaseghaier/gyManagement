{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4 shadow-lg" style="max-width: 500px; width: 100%;">
            <h1 class="h4 mb-4 text-center">Create an Account</h1>

            {% if registrationForm is not null %}
                <div class="alert alert-warning" role="alert">
                    Please fill in the details below to create your account.
                </div>
            {% endif %}

            {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}

            {% if registrationForm.email.vars.errors|length > 0 %}
                <div class="alert alert-danger">
                    {{ form_errors(registrationForm.email) }}
                </div>
            {% endif %}
            {{ form_row(registrationForm.email, {
                'label': 'Email Address',
                'attr': {'class': 'form-control', 'placeholder': 'Enter your email', 'autocomplete': 'email'}
            }) }}

            {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                <div class="alert alert-danger">
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>
            {% endif %}
            {{ form_row(registrationForm.plainPassword, {
                'label': 'Password',
                'attr': {'class': 'form-control', 'placeholder': 'Enter your password', 'autocomplete': 'new-password'}
            }) }}

            {% if registrationForm.agreeTerms.vars.errors|length > 0 %}
                <div class="alert alert-danger">
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
            {% endif %}
            {{ form_row(registrationForm.agreeTerms, {
                'label': 'I agree to the terms and conditions',
                'attr': {'class': 'form-check-input'}
            }) }}

            <button type="submit" class="btn btn-primary w-100">Register</button>

            {{ form_end(registrationForm) }}

            <div class="mt-3 text-center">
                <p>Already have an account? <a href="{{ path('app_login') }}">Log in here</a></p>
            </div>
        </div>
    </div>
{% endblock %}
