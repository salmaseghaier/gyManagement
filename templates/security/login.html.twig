{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4 shadow-lg" style="width: 100%; max-width: 400px;">
            <form method="post" novalidate>
                {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Error:</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="alert alert-info">
                        You are logged in as <strong>{{ app.user.userIdentifier }}</strong>.
                        <a href="{{ path('app_logout') }}" class="btn btn-sm btn-warning ms-2">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h4 mb-4 text-center">Sign In</h1>

                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required aria-describedby="emailHelp" placeholder="Enter your email" autofocus>
                </div>

                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Enter your password">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-primary w-100" type="submit">
                    Sign in
                </button>
            </form>

            <div class="mt-3 text-center">
                <p>Don't have an account? <a href="{{ path('app_register') }}">Register here</a></p>
            </div>
        </div>
    </div>
{% endblock %}
