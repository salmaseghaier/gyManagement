{% extends 'base.html.twig' %}

{% block title %}Abonnement List{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="mb-0">Abonnements</h1>
            <a class="btn btn-success" href="{{ path('app_abonnement_new') }}">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        </div>

        <!-- Flash Messages -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Search Form -->
        <form action="{{ path('app_abonnement_index') }}" method="get" class="input-group mb-4">
            <input class="form-control" type="search" placeholder="Search abonnements..." name="query">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>

        <!-- Abonnements Table -->
        <table class="table table-striped table-hover">
            <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Type</th>
                <th scope="col">Price</th>
                <th scope="col">Start Date</th>
                <th scope="col">End Date</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for abonnement in abonnements %}
                <tr>
                    <td>{{ abonnement.id }}</td>
                    <td>{{ abonnement.type }}</td>
                    <td>{{ abonnement.price }}</td>
                    <td>{{ abonnement.startDate ? abonnement.startDate|date('Y-m-d') : 'N/A' }}</td>
                    <td>{{ abonnement.endDate ? abonnement.endDate|date('Y-m-d') : 'N/A' }}</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="{{ path('app_abonnement_show', {'id': abonnement.id}) }}">
                            <i class="bi bi-eye"></i> Show
                        </a>
                        <a class="btn btn-secondary btn-sm" href="{{ path('app_abonnement_edit', {'id': abonnement.id}) }}">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center text-muted">No records found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
