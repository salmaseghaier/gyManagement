{% extends 'base.html.twig' %}

{% block title %}Abonnement Details{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4">Abonnement Details</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th scope="row">Id</th>
                        <td>{{ abonnement.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Type</th>
                        <td>{{ abonnement.type }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Price</th>
                        <td>{{ abonnement.price }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Start Date</th>
                        <td>{{ abonnement.startDate ? abonnement.startDate|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">End Date</th>
                        <td>{{ abonnement.endDate ? abonnement.endDate|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_abonnement_index') }}" class="btn btn-secondary">Back to List</a>
            <div>
                <a href="{{ path('app_abonnement_edit', {'id': abonnement.id}) }}" class="btn btn-primary">Edit</a>
                {{ include('abonnement/_delete_form.html.twig', { 'class': 'btn btn-danger ms-2' }) }}
            </div>
        </div>
    </div>
{% endblock %}
